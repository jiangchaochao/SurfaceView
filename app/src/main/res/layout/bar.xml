<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/detail_card_video_back"
            android:background="#00000000"
            />
    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/back"
        android:text="猎场09"
        android:textColor="#FFFFFF"
        android:textSize="35sp" />

    <ImageButton
        android:id="@+id/dress"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#00000000"
        android:src="@drawable/dress_plus"
        />

    <ImageButton
        android:id="@+id/danmu"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="66dp"
        android:layout_toEndOf="@+id/dress"
        android:background="#00000000"
        android:src="@drawable/danmu_off" />

    <TextView
        android:id="@+id/beisu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/danmu"
        android:text="倍速"
        android:textColor="#FFFFFF"
        android:textSize="35sp" />
    <ImageButton
        android:id="@+id/playermore"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#00000000"
        android:layout_alignParentEnd="true"
        android:src="@drawable/player_more_btn"
        />
</RelativeLayout>